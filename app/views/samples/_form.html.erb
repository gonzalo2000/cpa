
<%= simple_form_for(@sample) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :language, collection: [ "Spanish", "French", "German", "ASL", "SFS", "Latin" ] %>
    <%= f.input :level, collection: [*1..6] %>
    <%= f.input :score, collection: [*0..100].reverse %>
    <%= f.input :mode, collection: [ "Presentational writing", "Presentational speaking", "Interpersonal writing", "Interpersonal speaking" ] %>
    <%= f.input :comment %>
    <%= f.input :instruction, input_html: { accept: "application/pdf" } %>
    <%= f.input :submission, input_html: { accept: "application/pdf, audio/mp3, audio/wma, audio/wav, audio/m4a" } %>
  </div>

  
    <%= f.submit "Submit", :class => "btn btn-primary" %>
<% end %>
